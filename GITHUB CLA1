#include <stdio.h>

int main()
{
    int principal, rate, years;
    printf("Enter your principal amount :- ");
    scanf("%d", &principal);
    printf("Enter the rate of interest on your principal amount :--");
    scanf("%d", &rate);
    printf("Enter the time duration :--");
    scanf("%d", &years);
    int SimpleInterest = (principal * rate * years)/100;
    printf("The simple interest you have to pay is :-- %d", SimpleInterest);
    return 0;
}
